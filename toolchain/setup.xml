<xml>

   <!-- You can override this file to setup your own toolchain.
        You should peobably include thie following line -->

   <include name="${HXCPP_CONFIG}" section="vars" noerror="1"/>

   <!-- location of object cache -->
   <set name="HXCPP_COMPILE_CACHE" value="${OBJROOT}/objCache-tivo" if="tivo" />
   <set name="HXCPP_COMPILE_CACHE" value="${OBJROOT}/objCache-linux" if="linux" />
   <set name="HXCPP_COMPILE_CACHE" value="${OBJROOT}/objCache-mac" if="macos" />

   <section if="EMCC_CORES">
      <set name="HXCPP_COMPILE_THREADS" value="1" if="emscripten"  />
   </section>

</xml>


